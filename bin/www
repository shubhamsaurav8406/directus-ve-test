#!/usr/bin/env node

/**
 * Module dependencies.
 */

require('dotenv').config();

var app = require('../app');
var debug = require('debug')('hello-world:server');
var https = require('https');
var fs = require('fs');
var path = require('path');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '4444');
app.set('port', port);

/**
 * Create HTTPS server with mkcert certificates.
 */

var certPath = path.join(__dirname, '..', 'localhost+2.pem');
var keyPath = path.join(__dirname, '..', 'localhost+2-key.pem');

var server;

// Check if HTTPS certificates exist
if (fs.existsSync(certPath) && fs.existsSync(keyPath)) {
  try {
    var options = {
      cert: fs.readFileSync(certPath),
      key: fs.readFileSync(keyPath)
    };
    server = https.createServer(options, app);
    debug('HTTPS server created with mkcert certificates');
  } catch (error) {
    debug('Error loading HTTPS certificates, falling back to HTTP:', error.message);
    var http = require('http');
    server = http.createServer(app);
  }
} else {
  // Fallback to HTTP if certificates don't exist
  var http = require('http');
  server = http.createServer(app);
  debug('HTTPS certificates not found, using HTTP server. Run "mkcert localhost 127.0.0.1 ::1" in the project directory.');
}

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, '0.0.0.0');
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  var protocol = server.key ? 'HTTPS' : 'HTTP';
  debug(protocol + ' server listening on ' + bind);
}
